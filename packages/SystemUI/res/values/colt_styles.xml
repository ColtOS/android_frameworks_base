<resources xmlns:android="http://schemas.android.com/apk/res/android">

     <!-- Custom Carrier Label -->
    <style name="TextAppearance.StatusBar.CarrierLabel" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">@dimen/status_bar_carrier_height</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_carrier_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

<!-- header text shadows -->
    <style name="TextAppearance.StatusBar.Expanded.Clock.Shadow" parent="TextAppearance.StatusBar.Expanded.Clock" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Date.Shadow" parent="TextAppearance.StatusBar.Expanded.Date" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>


<!-- Pixel home dot style -->
     <style name="DotStyle">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_centerHorizontal">true</item>
         <item name="android:layout_centerVertical">true</item>
     </style>

<!-- OmniJaws -->
    <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

<!-- Color engine -->
    <style name="systemui_light_theme">
        <item name="android:colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="android:textColorPrimary">@*android:color/primary_text_material_dark</item>
    </style>

    <style name="systemui_pixel_theme">
        <item name="android:colorPrimary">@color/pixel_primary_color</item>
        <item name="android:colorPrimaryDark">@color/pixel_primary_color</item>
        <item name="android:colorSecondary">@color/pixel_primary_color</item>
    </style>

    <style name="TextAppearance.StatusBar.PhoneTicker"
        parent="@*android:style/TextAppearance.StatusBar.Ticker">
        <!-- Note: must be dp to fit in status bar -->
        <item name="android:textSize">14dp</item>
    </style>

</resources>
