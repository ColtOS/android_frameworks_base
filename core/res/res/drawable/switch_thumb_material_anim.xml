<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		<!-- This is the shadow -->
			<item android:top="2dp">
                <shape android:shape="ring" android:useLevel="false" android:innerRadius="4.0dip" android:thickness="3.0dip">                   
                    <solid android:color="#26000000" />
					<size android:height="15.0dip" android:width="15.0dip" />
                </shape>
            </item>
		<!-- Shadow ends here -->
            <item>
                <shape android:tint="#ffffffff" android:dither="true" android:visible="true" android:shape="ring" android:useLevel="false" android:innerRadius="4.0dip" android:thickness="3.0dip">                   
                    <solid android:color="@android:color/white" />
					<size android:height="20.0dip" android:width="20.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:tint="#ffffffff" android:dither="true" android:visible="true" android:shape="ring" android:useLevel="false" android:innerRadius="4.0dip" android:thickness="3.0dip">
                    <solid android:color="@android:color/white" />
					<size android:height="20.0dip" android:width="20.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
